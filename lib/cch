local Library = {}
Library.__index = Library

local TweenService = game:GetService("TweenService")
local UIS = game:GetService("UserInputService")

function Library:CreateDraggableGUI(title, size)
    -- Check if GUI already exists and remove it
    if game.Players.LocalPlayer.PlayerGui:FindFirstChild("SmoothDraggableGUI") then
        game.Players.LocalPlayer.PlayerGui.SmoothDraggableGUI:Destroy()
    end

    local ScreenGui = Instance.new("ScreenGui")
    local Frame = Instance.new("Frame")
    local Title = Instance.new("TextLabel")
    local ContentFrame = Instance.new("Frame")
    local CloseButton = Instance.new("TextButton")
    local MinimizeButton = Instance.new("TextButton")
    local UICornerFrame = Instance.new("UICorner")
    local UICornerTitle = Instance.new("UICorner")
    local UICornerContentFrame = Instance.new("UICorner")
    local UICornerCloseButton = Instance.new("UICorner")
    local UICornerMinimizeButton = Instance.new("UICorner")
    local UIStrokeFrame = Instance.new("UIStroke")
    local UIStrokeTitle = Instance.new("UIStroke")
    local UIStrokeCloseButton = Instance.new("UIStroke")
    local UIStrokeMinimizeButton = Instance.new("UIStroke")
    local UIShadowFrame = Instance.new("ImageLabel")

    ScreenGui.Name = "SmoothDraggableGUI"
    ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    Frame.Name = "MainFrame"
    Frame.Parent = ScreenGui
    Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    Frame.BorderSizePixel = 0
    Frame.Position = UDim2.new(0.3, 0, 0.3, 0)
    Frame.Size = size
    Frame.ClipsDescendants = true

    -- Add UICorner to make corners smooth
    UICornerFrame.CornerRadius = UDim.new(0, 10)
    UICornerFrame.Parent = Frame

    -- Add Stroke to Frame
    UIStrokeFrame.Thickness = 2
    UIStrokeFrame.Color = Color3.fromRGB(50, 50, 50)
    UIStrokeFrame.Parent = Frame

    -- Add Shadow to Frame
    UIShadowFrame.Name = "Shadow"
    UIShadowFrame.Parent = Frame
    UIShadowFrame.BackgroundTransparency = 1
    UIShadowFrame.Position = UDim2.new(0, -10, 0, -10)
    UIShadowFrame.Size = UDim2.new(1, 20, 1, 20)
    UIShadowFrame.Image = "rbxassetid://1316045217"
    UIShadowFrame.ImageColor3 = Color3.fromRGB(0, 0, 0)
    UIShadowFrame.ImageTransparency = 0.5
    UIShadowFrame.ScaleType = Enum.ScaleType.Slice
    UIShadowFrame.SliceCenter = Rect.new(10, 10, 118, 118)

    Title.Name = "Title"
    Title.Parent = Frame
    Title.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    Title.BorderSizePixel = 0
    Title.Size = UDim2.new(1, 0, 0.1, 0)
    Title.Font = Enum.Font.SourceSans
    Title.Text = title
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextSize = 18.000

    -- Add UICorner to Title
    UICornerTitle.CornerRadius = UDim.new(0, 10)
    UICornerTitle.Parent = Title

    -- Add Stroke to Title
    UIStrokeTitle.Thickness = 2
    UIStrokeTitle.Color = Color3.fromRGB(50, 50, 50)
    UIStrokeTitle.Parent = Title

    ContentFrame.Name = "ContentFrame"
    ContentFrame.Parent = Frame
    ContentFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    ContentFrame.BorderSizePixel = 0
    ContentFrame.Position = UDim2.new(0, 0, 0.1, 0)
    ContentFrame.Size = UDim2.new(1, 0, 0.9, 0)
    
    -- Add UICorner to ContentFrame
    UICornerContentFrame.CornerRadius = UDim.new(0, 10)
    UICornerContentFrame.Parent = ContentFrame

    -- Close Button
    CloseButton.Name = "CloseButton"
    CloseButton.Parent = Title
    CloseButton.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    CloseButton.Size = UDim2.new(0.1, 0, 1, 0)
    CloseButton.Position = UDim2.new(0.9, 0, 0, 0)
    CloseButton.Text = "X"
    CloseButton.Font = Enum.Font.SourceSans
    CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    CloseButton.TextSize = 18.000

    -- Add UICorner to Close Button
    UICornerCloseButton.CornerRadius = UDim.new(0, 10)
    UICornerCloseButton.Parent = CloseButton

    -- Add Stroke to Close Button
    UIStrokeCloseButton.Thickness = 2
    UIStrokeCloseButton.Color = Color3.fromRGB(50, 50, 50)
    UIStrokeCloseButton.Parent = CloseButton

    -- Minimize Button
    MinimizeButton.Name = "MinimizeButton"
    MinimizeButton.Parent = Title
    MinimizeButton.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    MinimizeButton.Size = UDim2.new(0.1, 0, 1, 0)
    MinimizeButton.Position = UDim2.new(0.8, 0, 0, 0)
    MinimizeButton.Text = "-"
    MinimizeButton.Font = Enum.Font.SourceSans
    MinimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    MinimizeButton.TextSize = 18.000

    -- Add UICorner to Minimize Button
    UICornerMinimizeButton.CornerRadius = UDim.new(0, 10)
    UICornerMinimizeButton.Parent = MinimizeButton

    -- Add Stroke to Minimize Button
    UIStrokeMinimizeButton.Thickness = 2
    UIStrokeMinimizeButton.Color = Color3.fromRGB(50, 50, 50)
    UIStrokeMinimizeButton.Parent = MinimizeButton

    -- Draggable functionality
    local dragging
    local dragInput
    local dragStart
    local startPos

    local function update(input)
        local delta = input.Position - dragStart
        local newPosition = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        local tween = TweenService:Create(Frame, TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Position = newPosition})
        tween:Play()
    end

    Title.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = Frame.Position

            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    Title.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)

    UIS.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            update(input)
        end
    end)

    -- Close Button Functionality
    CloseButton.MouseButton1Click:Connect(function()
        local tween = TweenService:Create(Frame, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {Position = UDim2.new(Frame.Position.X.Scale, Frame.Position.X.Offset, Frame.Position.Y.Scale, -Frame.Size.Y.Offset)})
        tween:Play()
        tween.Completed:Connect(function()
            ScreenGui:Destroy()
        end)
    end)

    -- Minimize Button Functionality
    local isMinimized = false
    MinimizeButton.MouseButton1Click:Connect(function()
        if not isMinimized then
            local tween = TweenService:Create(ContentFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {Size = UDim2.new(ContentFrame.Size.X.Scale, ContentFrame.Size.X.Offset, 0, 0)})
            tween:Play()
            isMinimized = true
        else
            local tween = TweenService:Create(ContentFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Size = UDim2.new(ContentFrame.Size.X.Scale, ContentFrame.Size.X.Offset, 0.9, 0)})
            tween:Play()
            isMinimized = false
        end
    end)

    -- Smooth show animation
    Frame.Position = UDim2.new(Frame.Position.X.Scale, Frame.Position.X.Offset, Frame.Position.Y.Scale, -Frame.Size.Y.Offset)
    local tween = TweenService:Create(Frame, TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Position = UDim2.new(Frame.Position.X.Scale, Frame.Position.X.Offset, Frame.Position.Y.Scale, 0)})
    tween:Play()

    return Frame
end

return Library
